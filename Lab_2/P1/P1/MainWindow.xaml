<Window x:Class="P1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P1"
        mc:Ignorable="d"
        Title="P1" Height="450" Width="300" Background="#777777">
    <Grid Grid.Column="0" Grid.ColumnSpan="6">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="This Label" Grid.Row="1" FontSize="20" Margin="0,31,81,18" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Width="114" Grid.Column="1" FontFamily="Comic Sans MS, Arial"/>
        <Button Content="Start" Grid.Row="2" Grid.ColumnSpan="3" Margin="60,0,56,0" FontFamily="Comic Sans MS, Arial" FontSize="40" FontWeight="Bold" Name="btnStart" Click="btnStart_Click"/>
    </Grid>
</Window>
